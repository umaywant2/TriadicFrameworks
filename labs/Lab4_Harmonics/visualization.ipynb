n = np.arange(0, 6)
hbar = 1.0545718e-34
omega = 2 * np.pi * 1e6
E_n = hbar * omega * (n + 0.5)

plt.figure(figsize=(6,4))
plt.stem(n, E_n, basefmt=" ")
plt.title('Quantum Harmonic Energy Levels')
plt.xlabel('Quantum Number n')
plt.ylabel('Energy (J)')
plt.grid(True)
plt.show()

